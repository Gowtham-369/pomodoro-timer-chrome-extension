{   
    "manifest_version": 3,
    "name": "Pomodoro Timer",
    "version": "1.0.0",
    "description": "Simple Pomodoro Timer for better Productivity",
    "author": "gowthamreddyuppunuri@gmail.com",
    "icons": {
        "16": "./assets/images/icon-timer-16.png",
        "32": "./assets/images/icon-timer-32.png",
        "64": "./assets/images/icon-timer-64.png",
        "96": "./assets/images/icon-timer-96.png"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "script-src": ["'self'"]
    },
    "action":{
        "default_popup": "popup.html",
        "default_icon": {
            "16": "./assets/images/icon-timer-16.png",
            "32": "./assets/images/icon-timer-32.png",
            "64": "./assets/images/icon-timer-64.png",
            "96": "./assets/images/icon-timer-96.png"
        },
        "default_title": "Pomodoro Timer",
        "default_width": 430,
        "default_height": 600
    },
    "options_page": "options.html",
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}